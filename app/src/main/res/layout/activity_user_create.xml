<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.shamiq.microbitwager.UserCreate"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/createNameTextView"
        android:layout_above="@+id/createEmailTextView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="34dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="10"
        android:id="@+id/createNameEditText"
        android:layout_alignBottom="@+id/createNameTextView"
        android:layout_alignStart="@+id/fundEditAccount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/createEmailTextView"
        android:layout_alignBottom="@+id/fundEditAccount"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/fundEditAccount"
        android:layout_marginTop="127dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:hint="joe@example.com" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pin"
        android:id="@+id/CreatePinTextView"
        android:layout_below="@+id/createEmailTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/createPinEditText"
        android:layout_alignBottom="@+id/CreatePinTextView"
        android:layout_alignStart="@+id/fundEditAccount"
        android:hint="****" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/next"
        android:layout_marginTop="42dp"
        android:onClick="next"
        android:layout_below="@+id/createPinEditText"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create your account"
        android:id="@+id/createAccountTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
